<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <title><%= hilfe.title %></title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap');

    body {
      font-family: 'Inter', sans-serif;
      margin: 0;
      padding: 0;
      transition: background 0.3s, color 0.3s;
    }
    body.light {
      background: linear-gradient(135deg, #e0e7ff, #f0f4ff);
      color: #333;
    }
    body.dark {
      background: linear-gradient(135deg, #111827, #1f2937);
      color: #e5e7eb;
    }

    .container {
      max-width: 800px;
      margin: 40px auto;
      padding: 30px;
      border-radius: 12px;
      transition: background 0.3s, color 0.3s;
    }

    .logo {
      display: block;
      margin: 0 auto 15px;
      max-width: 160px;
    }

    /* Zurück-Button */
    .back-btn {
      display: inline-block;
      margin-bottom: 20px;
      padding: 8px 16px;
      background: transparent;
      color: #3b82f6;
      text-decoration: none;
      border: 2px solid #3b82f6;
      border-radius: 8px;
      font-weight: 600;
      transition: background 0.3s, color 0.3s;
    }
    .back-btn:hover {
      background: #3b82f6;
      color: #fff;
    }

    h1 {
      text-align: center;
      margin-bottom: 20px;
      font-weight: 600;
    }

    .hilfe-item {
      margin-bottom: 20px;
      border-bottom: 1px solid #4b5563;
      padding-bottom: 10px;
    }
    .hilfe-header {
      font-size: 18px;
      font-weight: 600;
      cursor: pointer;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px;
      border-radius: 8px;
      background: rgba(59,130,246,0.1);
      transition: background 0.2s;
    }
    .hilfe-header:hover {
      background: rgba(59,130,246,0.2);
    }
    .hilfe-content { display: none; margin-top: 10px; }
    .hilfe-image {
      max-width: 65%;
      margin: 10px auto;
      display: block;
      border-radius: 8px;
    }

    .file-preview {
      display: flex;
      align-items: center;
      margin-top: 8px;
    }
    .file-icon { width: 28px; height: 28px; margin-right: 8px; }
    .file-preview a {
      text-decoration: none;
      color: #3b82f6;
      font-weight: 600;
      word-break: break-word;
    }
    .file-preview a:hover { text-decoration: underline; }

    .locked-info {
      color: #f87171;
      font-size: 14px;
      margin-top: 5px;
    }

    /* Dark/Light Switch */
    .theme-toggle {
      position: fixed;
      top: 15px;
      right: 15px;
      width: 36px; height: 36px;
      display: flex; align-items: center; justify-content: center;
      background: rgba(0,0,0,0.1);
      border-radius: 50%;
      cursor: pointer;
      font-size: 18px;
      transition: background 0.3s;
    }
    body.light .theme-toggle { background: rgba(0,0,0,0.1); color: #111; }
    body.dark  .theme-toggle { background: rgba(255,255,255,0.1); color: #fff; }
    .theme-toggle:hover { background: rgba(0,0,0,0.2); }

    .arrow { display: inline-block; transition: transform 0.3s ease; }
    .arrow.rotated { transform: rotate(-90deg); }

    .unlock-error {
      color: #f87171; font-size: 13px; margin-top: 5px; display: none;
    }
  </style>
</head>
<body class="light">
  <!-- Dark/Light Toggle -->
  <div id="themeToggle" class="theme-toggle">🌙</div>

  <div class="container">
    <img src="/logo.png" alt="Logo" class="logo">

    <!-- Ist ein User eingeloggt? Dann Dashboard, sonst Startseite -->
    <% if (user) { %>
      <a href="/dashboard" class="back-btn">Zu meinen Lernhilfen</a>
    <% } else { %>
      <a href="/" class="back-btn">Zur Startseite</a>
    <% } %>

    <h1><%= hilfe.title %></h1>

    <% hilfe.hilfen.forEach((h, idx) => { %>
      <div class="hilfe-item" id="hilfe-<%= idx %>">
        <div class="hilfe-header" onclick="toggleHilfe(<%= idx %>)">
          <span>
            <%= h.name %>
            <% if (h.locked && !unlocked[idx]) { %> 🔒 <% } %>
          </span>
          <span class="arrow" id="arrow-<%= idx %>">◀</span>
        </div>

        <div class="hilfe-content" id="content-<%= idx %>">
          <% if (h.locked && !unlocked[idx]) { %>
            <div class="locked-content">
              <div class="locked-info">🔒 Diese Hilfe ist gesperrt</div>
              <form class="unlock-form" action="/hilfe/<%= hilfe.id %>/unlock/<%= idx %>" method="POST">
                <input type="password" name="code" placeholder="Code eingeben">
                <button type="submit">Entsperren</button>
                <div class="unlock-error"></div>
              </form>
            </div>
            <div class="real-content" style="display:none;">
              <p><%= h.content %></p>
              <% if (h.files && h.files.length) {
                   const imgExt = /\.(png|jpe?g|gif|webp|bmp)$/;
                   const images = h.files.filter(f=>f.path.match(imgExt));
                   const others = h.files.filter(f=>!f.path.match(imgExt));
              %>
                <% images.forEach(f=>{ %>
                  <img src="/<%=f.path%>" alt="<%=f.original%>" class="hilfe-image">
                <% }) %>
                <% others.forEach(f=>{
                     let icon='/file-icon.png';
                     if (f.original.toLowerCase().endsWith('.pdf')) icon='/pdf-icon.png';
                %>
                  <div class="file-preview">
                    <img src="<%=icon%>" class="file-icon">
                    <a href="/<%=f.path%>" target="_blank"><%=f.original%></a>
                  </div>
                <% }) %>
              <% } %>
            </div>
          <% } else { %>
            <div class="real-content">
              <p><%= h.content %></p>
              <% if (h.files && h.files.length) {
                   const imgExt = /\.(png|jpe?g|gif|webp|bmp)$/;
                   const images = h.files.filter(f=>f.path.match(imgExt));
                   const others = h.files.filter(f=>!f.path.match(imgExt));
              %>
                <% images.forEach(f=>{ %>
                  <img src="/<%=f.path%>" alt="<%=f.original%>" class="hilfe-image">
                <% }) %>
                <% others.forEach(f=>{
                     let icon='/file-icon.png';
                     if (f.original.toLowerCase().endsWith('.pdf')) icon='/pdf-icon.png';
                %>
                  <div class="file-preview">
                    <img src="<%=icon%>" class="file-icon">
                    <a href="/<%=f.path%>" target="_blank"><%=f.original%></a>
                  </div>
                <% }) %>
              <% } %>
            </div>
          <% } %>
        </div>
      </div>
    <% }) %>
  </div>

  <script>
    // Toggle Hilfen
    function toggleHilfe(i){
      const c=document.getElementById('content-'+i),
            a=document.getElementById('arrow-'+i);
      if(c.style.display==='block'){
        c.style.display='none'; a.classList.remove('rotated');
      } else {
        c.style.display='block'; a.classList.add('rotated');
      }
    }

    // Dark/Light Switch
    const tog=document.getElementById('themeToggle'), bd=document.body;
    function setTheme(t){
      bd.classList.replace(t==='dark'?'light':'dark', t);
      tog.textContent = t==='dark'? '☀️' : '🌙';
      localStorage.setItem('theme', t);
    }
    tog.addEventListener('click', ()=> setTheme(bd.classList.contains('light')?'dark':'light'));
    setTheme(localStorage.getItem('theme')||'light');

    // AJAX Unlock
    document.querySelectorAll('.unlock-form').forEach(f=>{
      f.addEventListener('submit',async e=>{
        e.preventDefault();
        const r=await fetch(f.action,{
          method:'POST',
          headers:{'Content-Type':'application/x-www-form-urlencoded','Accept':'application/json'},
          body:new URLSearchParams(new FormData(f))
        }), j=await r.json();
        if(j.success){
          j.unlockedIndices.forEach(idx=>{
            const box=document.getElementById('hilfe-'+idx);
            box.querySelector('.locked-content').style.display='none';
            box.querySelector('.real-content').style.display='block';
            const hdr=document.getElementById('arrow-'+idx).parentElement;
            hdr.innerHTML=hdr.innerHTML.replace('🔒','');
          });
        } else {
          const err=f.querySelector('.unlock-error');
          err.textContent=j.error; err.style.display='block';
        }
      });
    });
  </script>
</body>
</html>