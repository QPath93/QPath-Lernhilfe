<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <title>Lernhilfe erstellt</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap');

    body {
      font-family: 'Inter', sans-serif;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      transition: background 0.3s, color 0.3s;
    }

    body.light {
      background: linear-gradient(135deg, #e0e7ff, #f0f4ff);
      color: #333;
    }

    body.light .container {
      background: #fff;
      color: #333;
      box-shadow: 0 8px 20px rgba(0,0,0,0.1);
    }

    body.dark {
      background: linear-gradient(135deg, #111827, #1f2937);
      color: #e5e7eb;
    }

    body.dark .container {
      background: #1f2937;
      color: #f3f4f6;
      box-shadow: 0 8px 20px rgba(0,0,0,0.4);
    }

    .container {
      max-width: 600px;
      width: 90%;
      padding: 30px;
      border-radius: 12px;
      text-align: center;
      transition: background 0.3s, color 0.3s;
    }

    .logo {
      max-width: 160px;
      margin-bottom: 20px;
    }

    h1 {
      margin-bottom: 20px;
      font-weight: 600;
    }

    .qr-code {
      margin: 20px 0;
    }

    .qr-code img {
      max-width: 200px;
      width: 100%;
      height: auto;
      border-radius: 8px;
    }

    .btn {
      display: inline-block;
      margin: 10px;
      padding: 12px 20px;
      font-size: 16px;
      font-weight: 600;
      border-radius: 8px;
      text-decoration: none;
      cursor: pointer;
      transition: background 0.3s;
      border: none;
    }

    .btn-link {
      background: #3b82f6;
      color: #fff;
    }

    .btn-link:hover {
      background: #2563eb;
    }

    .btn-download {
      background: #10b981;
      color: #fff;
    }

    .btn-download:hover {
      background: #059669;
    }

    .theme-toggle {
      position: fixed;
      top: 15px;
      right: 15px;
      width: 36px;
      height: 36px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: rgba(0,0,0,0.1);
      border-radius: 50%;
      font-size: 18px;
      cursor: pointer;
      transition: background 0.3s;
      backdrop-filter: blur(4px);
      z-index: 10;
    }
    body.light .theme-toggle { color: #111; }
    body.dark  .theme-toggle { color: #fff; background: rgba(255,255,255,0.1); }
    .theme-toggle:hover { background: rgba(0,0,0,0.2); }
  </style>
</head>
<body class="light">
  <!-- Darkmode Toggle nur Icon -->
  <div class="theme-toggle" id="themeToggle">🌙</div>

  <div class="container">
    <img src="/logo.png" alt="Logo" class="logo">
    <h1>Lernhilfe erstellt!</h1>

    <p>
      Hier ist der Link zur Lernhilfe:<br>
      <a href="<%= url %>" class="btn btn-link">Lernhilfe öffnen</a>
    </p>

    <div class="qr-code">
      <img id="qrImage" src="<%= qrImage %>" alt="QR-Code">
    </div>

    <button class="btn btn-download" id="downloadBtn" type="button">📥 QR-Code herunterladen</button>

    <div style="margin-top:20px;">
      <a href="/dashboard" class="btn btn-link">Zurück zu meinen Lernhilfen</a>
    </div>
  </div>

  <script>
    const themeToggle = document.getElementById('themeToggle');
    const bodyElem = document.body;

    function applyTheme(theme) {
      bodyElem.classList.replace(theme==='dark'?'light':'dark', theme);
      themeToggle.textContent = theme === 'dark' ? '☀️' : '🌙';
      localStorage.setItem('theme', theme);
    }

    themeToggle.addEventListener('click', () => {
      applyTheme(bodyElem.classList.contains('light') ? 'dark' : 'light');
    });

    // initial
    applyTheme(localStorage.getItem('theme') || 'light');

    // Download QR
    document.getElementById('downloadBtn').addEventListener('click', () => {
      const qrImg = document.getElementById('qrImage');
      const link = document.createElement('a');
      link.href = qrImg.src;
      link.download = 'qr-code.png';
      link.click();
    });
  </script>
</body>
</html>